@model IEnumerable<Business.Entities.RideRequest>
@{
    ViewBag.Title = "Manage Requests";
}

<h2>@ViewBag.Title</h2>


<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Accept Request" onclick="location.href='@Url.Action("Accept", "Requests", new { offerId = item.RideOffer.Id, requestId = item.Id })'" />
                        <input type="button" value="Reject Request" onclick="location.href='@Url.Action("Reject", "Requests", new { offerId = item.RideOffer.Id, requestId = item.Id })'" />
                    </div>
                </div>
            </td>
        </tr>
    }

</table>